root = true

[*.{rs,md,yml,toml}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
disabled_rules = import-ordering

[*.md]
continuation_indent_size = 2
trim_trailing_whitespace = false
max_line_length = 200


